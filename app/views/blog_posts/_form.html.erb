<% content_for :form_title, "New Blog Post" %>

<%= form_with(model: @blog_post, local: true, class: "space-y-6") do |form| %>

  <% if form.object.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded space-y-1">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <!-- Title -->
  <div class="flex flex-col">
    <%= form.label :title, class: "block text-sm font-medium text-gray-600 mb-1" %>
    <%= form.text_field :title, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-veryLightRed focus:border-veryLightRed transition" %>
  </div>

  <!-- Extract -->
  <div class="flex flex-col">
    <%= form.label :extract, class: "block text-sm font-medium text-gray-600 mb-1" %>
    <%= form.text_field :extract, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-veryLightRed focus:border-veryLightRed transition" %>
  </div>

  <!-- Content -->
  <div class="flex flex-col">
    <%= form.label :content, class: "block text-sm font-medium text-gray-600 mb-1" %>
    <%= form.text_area :content, rows: 6, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-veryLightRed focus:border-veryLightRed transition" %>
  </div>

  <!-- Photo Upload -->
  <div class="flex flex-col">
    <%= form.label :photo, class: "block text-sm font-medium text-gray-600 mb-1" %>
    <div class="relative w-full">
      <%= form.file_field :photo, direct_upload: true, class: "absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" %>
      <div class="w-full px-4 py-3 bg-veryLightRed text-white font-semibold rounded-full text-center hover:bg-red-600 transition">
        Choose Photo
      </div>
    </div>
    <span id="photo-file-name" class="mt-2 text-gray-500 text-sm">No file chosen</span>
  </div>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Create Post", class: "w-full mt-6 bg-veryLightRed hover:bg-red-600 text-white font-semibold py-3 rounded-full transition" %>
  </div>

<% end %>