<%= form_with(model: @blog_post) do|form| %>
<% if form.object.errors.any? %>
<div>
    <% form.object.errors.full_messages.each do |message| %>
    <div><%= message %></div>
    <%end%>
</div>
<% end %>
<div class="flex flex-col my-12">
<%= form.label :title %>
<%= form.text_field :title %>
</div>
<div class="flex flex-col my-12">
<%= form.label :extract %>
<%= form.text_field :extract%>
</div>
<div>
<div class="flex flex-col my-12">
  <%= form.label :content %>
  <%= form.text_area :content, class: "w-full p-2 border rounded" %>
</div>
<div class="mt-12 flex flex-col">
<%= form.label :photo %>
<%= form.file_field :photo, direct_upload: true %>  <!-- ActiveStorage File Field -->
</div>
</div>
<div class="m-3 mt-12 bg-veryLightRed hover:bg-textRed text-white hover:text-white font-medium py-1 px-6 rounded-full">
<%= form.button %></div>
<%end%>
