<%= render partial: "shared/navbar" %>

<div class="my-48">
  <h2 class="font-Ubuntu text-center text-veryDarkBlue text-2xl md:text-4xl z-10">Inspiration</h2>
  <div class="pb-12 m-8 md:m-24 mt-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% @blog_posts.each_with_index do |blog_post, index| %>
    <div class="<%= 'col-span-2 bg-Verydarkdesaturatedblue' if index == 3 %> <%= 'col-span-2 bg-Verydarkdesaturatedblue' if index == 6 %> text-center md:text-left bg-veryLightRed">
      <div class="p-8">
        <h2 class="pb-6 font-Ubuntu text-white text-2xl">
          <%= link_to blog_post.title, blog_post %>
        </h2>
        <%= image_tag blog_post.photo, alt: "Blog Post Image" if blog_post.photo.attached? %>
      </div>
    </div>
  <% end %>
  </div>
</div>

<%= render partial: "shared/footer" %>

