<%= render partial: "shared/navbar" %>
<div class="mt-24">
  <h2 class="font-Ubuntu text-center text-veryDarkBlue text-2xl md:text-4xl z-10">Inspiration</h2>
  <% @blog_posts.each do |blog_post| %>
    <div class="mt-12 pb-12 text-center md:text-left md:ml-32">
      <div class="p-8">
        <h2 class="pb-6 font-Ubuntu text-veryDarkBlue text-2xl">
          <%= link_to blog_post.title, blog_post %>
        </h2>
        <p class="font-overpass text-VeryDarkGrayishBlue font-light">
          <%= blog_post.extract%>
        </p>
      </div>
    </div>
  <% end %>
</div>

<%= render partial: "shared/footer" %>

