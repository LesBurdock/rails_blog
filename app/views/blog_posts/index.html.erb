<%= render partial: "shared/navbar" %>
<div class="mt-24 absolute">
  <h2 class="font-Ubuntu text-center text-veryDarkBlue text-2xl md:text-4xl z-10">Inspiration</h2>
  <% @blog_posts.each do |blog_post| %>
    <div class="mt-12 pb-12 text-center md:text-left md:ml-32 grid grid-rows-auto grid-cols-1 md:grid-rows-1 md:grid-cols-2">
      <div class="p-8 col-start-1 row-start-1">
        <h2 class="pb-6 font-Ubuntu text-veryDarkBlue text-2xl">
          <%= link_to blog_post.title, blog_post %>
        </h2>
        <p class="font-overpass text-VeryDarkGrayishBlue font-light">
          <%= blog_post.content.body.to_s.html_safe %>
        </p>
      </div>
      <div class="p-2 col-start-2 row-start-1">
        <% # Find and render Action Text attachments %>
        <div class="trix-content">
          <% blog_post.content.body.to_s.scan(/<div class="action-text-attachment">.*?<\/div>/m).each do |attachment_html| %>
            <%= attachment_html.html_safe %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
