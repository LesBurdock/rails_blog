<div class="flex flex-col md:flex-col text-veryDarkBlue min-h-screen">
 <%= render partial: "shared/navbar"  =%>
  <!-- Banner / Image -->
  <div class="h-64 md:h-80 bg-cover bg-center w-full"
       style="background-image: linear-gradient(to right, rgba(248, 80, 3, 0.79), rgba(248, 3, 54, 0.76)), url(<%= asset_path 'bg-pattern-intro-mobile.svg' %>);">
  </div>

  <!-- Form -->
  <div class="flex flex-1 items-center justify-center px-6 py-12">
    <div class="w-full max-w-md space-y-6">

      <h2 class="font-Ubuntu text-3xl font-bold text-center mb-8">Register</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { class: "space-y-6" }) do |f| %>

        <!-- Error Messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-600 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-veryLightRed focus:border-veryLightRed transition" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-600 mb-1" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-veryLightRed focus:border-veryLightRed transition mt-1" %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-600 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-veryLightRed focus:border-veryLightRed transition mt-1" %>
        </div>

        <!-- Avatar Upload -->
        <div class="flex flex-col mt-4">
          <%= f.label :avatar, class: "block text-sm font-medium text-gray-600 mb-1" %>
          <div class="relative w-full">
            <%= f.file_field :avatar, direct_upload: true, class: "absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" %>
            <div class="btn btn-primary w-full text-center">
              Choose Avatar
            </div>
          </div>
          <span id="avatar-file-name" class="mt-2 text-gray-500 text-sm">No file chosen</span>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Sign up", class: "w-full mt-6 bg-veryLightRed hover:bg-red-600 text-white font-semibold py-3 rounded-full transition" %>
        </div>

      <% end %>

      <!-- Devise Links -->
      <div class="mt-4 text-sm text-gray-500 text-center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>

</div>


